<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>Result Dashboard</title>
  <link rel="stylesheet" href="/style.css"/>
</head>
<body>
  <div class="topbar">
    <div class="brand">RESULT DASHBOARD</div>
    <div class="muted">Tanggal: <b><%= today %></b></div>
    <a class="btn" href="/admin/login">Admin</a>
  </div>

  <div class="wrap">
    <div class="grid">
      <% items.forEach(it => { %>
        <div class="card">
          <div class="card-head">
            <div class="logo">
              <% if (it.logo_url && it.logo_url.length) { %>
                <img src="<%= it.logo_url %>" alt="<%= it.name %>"/>
              <% } else { %>
                <div class="logo-fallback"><%= it.name.slice(0,2) %></div>
              <% } %>
            </div>
            <div>
              <div class="name"><%= it.name %></div>
              <div class="sub">Result: <%= it.result_date || today %></div>
            </div>
          </div>

          <div class="number">
            <%= (it.result_number || "----").padStart(4, "0") %>
          </div>

          <div class="actions">
            <a class="pill" href="#">Livedraw</a>
            <a class="pill" href="#">Detail</a>
            <a class="pill" href="#">Riwayat</a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
